<problem><title/>
<setup>
  <selectFromSequence name="a" from="-9" to="9" exclude="0 -4 -9 -1"/>
  <selectFromSequence name="b" from="-9" to="9" exclude="0 $a"/>
  <math name="factor1" simplify="numberspreserveorder">(x^2 + $a)</math>
  <math name="factor2" simplify="numberspreserveorder">(x + $b)</math>
  <math name="factoredExpr">$factor1 $factor2</math>
  <math name="expr" expand>$factoredExpr</math>
  <!--maths for feedbacks-->
  <math name="groupedNotFactoredAns">x^2(x + $b) + $a(x + $b)</math>
</setup>



<!--testing-->
<!-- <p>b = $b</p>
<p>c = $c</p>
<p>d = $d</p>
<p>e = $e</p>
<p>bd = <math simplify>$b*$d</math></p>
<p>ce = <math simplify>$c*$e</math></p>
<p>factoredExpr = $factoredExpr{simplify}</p>
<p>factoredExpr = $factoredExpr{expand}</p> -->
<!--testing-->




  
<p>Factor 
  <me>$expr</me></p>

  
<p><m>$expr = </m>
  <answer name="ans1">
    <mathInput name="userExpr"/>
    <award>
      <when>
        <hasSameFactoring>$userExpr $factoredExpr</hasSameFactoring>
      </when>
    </award>
    <award name="noFactoring" symbolicEquality simplifyOnCompare credit="0">
      <when>$userExpr = $expr</when>
    </award>
    <award name="groupedNotFactored" symbolicEquality simplifyOnCompare credit="1/4">
      <when>$userExpr = $groupedNotFactoredAns</when>
    </award>
  </answer></p>


