<problem>

<setup>
  <selectFromSequence name="a" from="2" to="8"/>
  <selectFromSequence name="b" from="-9" to="9" exclude="0"/>
  <selectFromSequence name="c" from="3" to="12"/>
  <math name="expr" simplify="numberspreserveorder">f(x) = $a x^2 + $b x + $c</math>
  <math name="sol" simplify="numberspreserveorder">2 $a x + $b</math>
</setup>


<!--testing-->
<!-- <p>a = $a</p>
