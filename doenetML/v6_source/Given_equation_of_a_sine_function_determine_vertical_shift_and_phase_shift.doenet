  </select>
</setup>
  <feedback condition="$ans1.creditAchieved = 1">$correctFeedback</feedback>

<!--*********************************************
            Solution
**********************************************-->  
<solution>
<p><m>\text{Vertical shift} = $d</m></p>
<p><m>\text{Phase shift} = $shift</m></p>
</solution>
</problem>
