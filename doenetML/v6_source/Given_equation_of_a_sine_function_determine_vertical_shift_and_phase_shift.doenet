<!--*********************************************
           Graphing tool
**********************************************--> 
<aside><title>Graphing Tool</title>
<setup>
  <function name="base" styleNumber="5">$userBaseFn</function> 
  <function name="fGraph">$userExpr</function> 
  <function name="fExtrema" domain="[-20, 20]">$f1</function>
  <number name="nR">pi/2</number>
  <number name="nL">0</number>
</setup>

<p>Graph base function: </p>
<p><m>y = </m><mathInput name="userBaseFn"/></p>

<p>Graph proposed solution function: </p>
<p><m>y = </m> <mathInput name="userExpr"/></p>

<updateValue target="graphPoints.hide" newValue="false" triggerWhen="$f1.formula = $fGraph.formula" type="boolean"/>
<p><em>tip: You can use the $wavePoint.styleDescription point to measure horizontal distance to wave points. </em></p>

<graph xmin="-4pi" xmax="4pi" xTickScaleFactor="pi"  aspectRatio="3/2" size="full" >
  $fGraph $base

  <group name="graphPoints" hide>
  $f1.extrema
  <map name="posLabelsDisp">
    <template>
      <label anchor="($posLabels[$i], $$f1($posLabels[$i])) + (0.15,0.15)" positionFromAnchor="upperright">
        <m>$posLabels[$i]</m>
      </label>
    </template>
    <sources alias="i"><sequence from="1" to="4"/></sources>
  </map>

  <map name="posMids">
    <template>
      <point>
        ($posLabels[$i] + pi/(2$b), $$f1($posLabels[$i] + pi/(2$b)))
      </point>
    </template>
    <sources alias="i"><sequence from="1" to="4"/></sources>
  </map>
  
  <map name="negLabelsDisp">
    <template>
      <label anchor="($negLabels[$i], $$f1($negLabels[$i])) + (0.15,0.15)" positionFromAnchor="upperright">
        <m>$negLabels[$i]</m>
      </label>
    </template>
    <sources alias="i"><sequence from="1" to="4"/></sources>
  </map>

  <map name="negMids">
    <template>
      <point>
        ($negLabels[$i] + pi/(2$b), $$f1($negLabels[$i] + pi/(2$b)))
      </point>
    </template>
    <sources alias="i"><sequence from="1" to="4"/></sources>
  </map>

  <point name="axisPt"  styleNumber="6">($zeroFixed,$wavePoint.y)
  </point>
  <point name="wavePoint" styleNumber="5">($nR, $$f1($nR))
    <constraints>
      <attractTo>$extrema $posMids $negMids</attractTo>
    </constraints>
  </point>
  
  <lineSegment name="hMeasure" endpoints="$axisPt $wavePoint" styleNumber="6" labelPosition="lowerright">
    <label>$hMeasure.length</label>
  </lineSegment>
  
  <line name="vert" styleNumber="4">x = $wavePoint.x</line>
  <regionBetweenCurveXAxis function="$f1" styleNumber="1" boundaryValues="$axisPt.x $wavePoint.x"/>
  </group>
</graph>
</aside>

<!--*********************************************
            User solution input
**********************************************-->  
<p><m>\text{Vertical shift} = </m><mathInput name="userD"/></p>
<p><m>\text{Phase shift} = </m><mathInput name="userPS"/></p>
  <answer name="ans1" matchPartial>
    <award><when>$userD = $d and $userPS = $shift</when></award>
    <award><when>$userD = $d and $userPS = $shiftAlt</when></award>
  </answer>


