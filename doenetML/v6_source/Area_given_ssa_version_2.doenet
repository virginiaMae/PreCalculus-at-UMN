  </select>
</setup>
 
  <feedback condition="$correct and $ans1.creditAchieved = 1">$correctFeedback</feedback>

  <feedback condition="$ans1.creditAchieved != 1 and $ans1.responseHasBeenSubmitted and $errorInSol1">There is an error in <alert>Solution 1</alert>.</feedback>
  <feedback condition="$ans1.creditAchieved != 1 and $ans1.responseHasBeenSubmitted and $errorInSol2">There is an error in <alert>Solution 2</alert>.</feedback>
  

<!--*********************************************
            Hint
**********************************************-->

<!--*********************************************
            Solution
**********************************************-->  
<solution>
<p><m>A_1 = $areaLN</m> square units, and <m>A_2 = $areaSN</m> square units.</p>
    <p>For validation, it does not matter in which order the solutions are entered.</p>
</solution>
</problem>




