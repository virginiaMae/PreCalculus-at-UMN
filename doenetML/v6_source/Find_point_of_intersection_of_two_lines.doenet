<problem>
<setup>
  <selectFromSequence assignNames="a b" numToSelect="2" from="-8" to="8" exclude="0"/>
  <selectFromSequence assignNames="c d" numToSelect="2" from="-5" to="5" exclude="0"/>
  <selectFromSequence name="x" from="-3" to="3" />
  <selectFromSequence name="y" from="-5" to="5" />
  <math name="rhs1" simplify>$a $x + $c $y</math>
  <math name="rhs2" simplify>$b $x + $d $y</math>
  <math name="eq1" simplify="numberspreserveorder">$a x + $c y</math>
  <math name="eq2" simplify="numberspreserveorder">$b x + $d y</math>
  
</setup>


