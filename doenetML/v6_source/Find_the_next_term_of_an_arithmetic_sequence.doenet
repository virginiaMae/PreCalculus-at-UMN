<!--******************************************************
            Current randomized problem
*******************************************************-->
<!-- 
QUESTION: Find the next term in the arithmetic sequence:
$$a$$ , $$a$$+$$d$$, $$a$$+2*$$d$$, $$a$$ + 3*$$d$$, $$a$$+4*$$d$$, ___
 ;; 

VARIABLES: {$$a$$[{4,25}, Integer], $$c$$[{3,8}, Integer], $$b$$[{-1,1}, Choice]} ;;

ComputedVariables: {$$d$$ -> $$b$$*$$c$$};;

answerLabel = {""};;

answer = {$$a$$+5*$$d$$};;

tolerance = 0
-->


<problem>
<setup>
  <selectFromSequence name="a" from="4" to="25"/>
  <selectFromSequence name="c" from="3" to="8"/>
  <selectFromSequence name="b" from="-1" to="1" exclude="0"/>
  <math name="d"simplify>$b $c</math>
  <math name="a1" simplify>$a</math>
  <math name="a2" simplify>$a + $d</math>
  <math name="a3" simplify>$a + 2 $d</math>
  <math name="a4" simplify>$a + 3 $d</math>
  <math name="a5" simplify>$a + 4 $d</math>
  <math name="sol" simplify>$a + 5 $d</math>
</setup>


<!--testing-->
<!-- <p>n = $n</p>
<p>d = $d</p>
<p>m = $m</p>
