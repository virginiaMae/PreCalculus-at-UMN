<!--*********************************************
            Solution
**********************************************-->
<solution>
<ul>
  <li><m>\text{Center} = ($h,$k)</m></li>
  <li><m>a = $a, \;\;\; b = $b</m></li>
</ul>
  
</solution>
</problem>

