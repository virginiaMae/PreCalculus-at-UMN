<problem>
<setup>
  <selectFromSequence name="h" from="-4" to="4" exclude="0"/>
  <selectFromSequence name="k" from="-4" to="4" exclude="0"/>
  <selectFromSequence name="a" from="1" to="5"/>
  <selectFromSequence name="b" from="1" to="5"/>
  <math name="displayFormula">(x - h)^2 / a^2 - (y - k)^2 / b^2 = 1</math>
  <math name="exprRHS" simplify>$a^2 $b^2 + $a^2 $k^2 - $h^2 $b^2</math>
  <math name="exprLHS" simplify>$b^2 x^2 - 2 $b^2 $h x - $a^2 y^2 + 2 $a^2 $k y</math> 
  <math name="expr">$exprLHS =$exprRHS</math>
  <math name="userDisplayLHS" simplify="numberspreserveorder">(x - $userH)^2 / $userA^2 - (y - $userK)^2 / $userB^2</math>
  <math name="solFormula" simplify>(x - $h)^2 / $a^2 - (y - $k)^2 / $b^2 = 1</math>
  <boolean name="check">$expr = $solFormula</boolean>
</setup>


<!--testing-->
<!-- <p>h = $h</p>
