<!--******************************************************
            Current randomized problem
*******************************************************-->
<!-- 
QUESTION: Find the solution to the system of equations:

With[{aa=$$a$$*x,bb=$$b$$*y},HoldForm[aa+bb]] = $$m$$
With[{cc=$$c$$*x,dd=$$d$$*y},HoldForm[cc+dd]] = $$n$$

Enter your answer as a fraction of integers, using the slash \.18/\.19 symbol. 
 ;; 

VARIABLES: {$$a$$[{-3,-2,-1,1,2,3,4,5,6}, Choice], $$b$$[{-3,-2,-1,1,2,3,4,5,6}, Choice], $$c$$[{-3,-2,-1,1,2,3,4,5,6}, Choice], $$d$$[{-3,-2,-1,1,2,3,4,5,6}, Choice],  $$m$$[{-12,20}, Integer], $$n$$[{-12,20}, Integer]}  ;;

ComputedVariables: {};;

answerLabel = {"x =", "y ="};;

answer = {(($$m$$)*($$d$$)-(($$n$$)*($$b$$)))/(($$a$$)*($$d$$)-(($$c$$)*($$b$$))),(($$a$$)*($$n$$)-(($$c$$)*($$m$$)))/(($$a$$)*($$d$$)-(($$c$$)*($$b$$)))};;

tolerance = 0
-->


<problem>
<setup>
  <selectFromSequence name="a" from="-3" to="6" exclude="0"/>
  <selectFromSequence name="b" from="-3" to="6" exclude="0"/>
  <selectFromSequence name="c" from="-3" to="6" exclude="0"/>
  <selectFromSequence name="d" from="-3" to="6" exclude="0"/>
  <selectFromSequence name="m" from="-12" to="20"/>
  <selectFromSequence name="n" from="-12" to="20"/>
  <math name="lhs1" simplify="numberspreserveorder">$a x + $b y</math>
  <math name="lhs2" simplify="numberspreserveorder">$c x + $d y</math>
  <math name="eq1">$lhs1 = $m</math>
  <math name="eq2">$lhs2 = $n</math>
  <math name="x" simplify>($m $d - $n $b) / ($a $d - $c $b)</math>
  <math name="y" simplify>($a $n - $c $m) / ($a $d - $c $b)</math>
  <boolean name="infSol">$lineEq1 = $lineEq2</boolean>
  <line name="lineEq1">$eq1</line>
  <line name="lineEq2">$eq2</line>
  <boolean name="noSol">$lineEq1.slope = $lineEq2.slope and $infSol = false</boolean>
</setup>


<!--testing-->
