<problem><title/>
<setup>
  <selectFromSequence name="p1" from="2" to="9" />
  <selectFromSequence name="a1" from="-9" to="9" exclude="$p1 0 -$p1"/>
  <gcd name="gcdA1P1">$p1 <abs>$a1</abs></gcd>
  <math name="a" simplify>$a1/$gcdA1P1</math>
  <math name="p" simplify>$p1/$gcdA1P1</math>
  
  <selectFromSequence name="q1" from="2" to="9" />
  <selectFromSequence name="b1" from="-9" to="9" exclude="$q1 0 -$q1"/>
  <gcd name="gcdB1Q1">$q1 <abs>$b1</abs></gcd>
  <math name="b" simplify>$b1/$gcdB1Q1</math>
  <math name="q" simplify>$q1/$gcdB1Q1</math>

  <math name="factor1" simplify="numberspreserveorder">($p x + $a)</math>
  <math name="factor2" simplify="numberspreserveorder">($q x + $b)</math>
  <math name="factoredExpr">$factor1 $factor2</math>
  <math name="expr" expand>$factoredExpr</math>
  <!--incorrect responses for feedbacks-->
  <math name="signErrorAns1">($p x - $a)($q x + $b)</math>
  <math name="signErrorAns2">($p x + $a)($q x - $b)</math>
  <math name="signErrorAns3">($p x - $a)($q x - $b)</math>
  <boolean name="signError">$userExpr = $signErrorAns1 or $userExpr = $signErrorAns2 or $userExpr = $signErrorAns3</boolean>
</setup>


