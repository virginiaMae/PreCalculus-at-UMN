<problem>

<setup>
  <select assignNames="x1 x2 x3" numToSelect="3">-6.8 0 6.8</select>
  <select assignNames="y1 y2 y3 y4" numToSelect="4">6.5 7.5 8.5 9.5</select>
  <selectFromSequence assignNames="a b c d e" numToSelect="5" from="1" to="10"/>

  <math name="eq1" simplify="numberspreserveorder" anchor="($x1{link='false'}, $y1{link='false'})">$a x + $b x^2 = $e</math>
  <math name="eq2" simplify="numberspreserveorder" anchor="($x2{link='false'}, $y2{link='false'})">$d - y = 2 $a</math>
  <math name="eq3" simplify="numberspreserveorder" anchor="($x3{link='false'}, $y3{link='false'})">sqrt($b z) = $a^2</math>
  <math name="eq4" simplify="numberspreserveorder" anchor="($x1{link='false'}, $y4{link='false'})">$a $b t = -s^2</math>

  <math name="expr1" simplify="numberspreserveorder" anchor="($x2{link='false'}, $y1{link='false'})">-$a $e x - 2 $d y</math>
  <math name="expr2" simplify="numberspreserveorder" anchor="($x3{link='false'}, $y2{link='false'})">1/z + $d z^2</math>
  <math name="expr3" simplify="numberspreserveorder" anchor="($x3{link='false'}, $y4{link='false'})">sqrt($a) + y^2</math>
  <math name="expr4" simplify="numberspreserveorder" anchor="($x1{link='false'}, $y3{link='false'})">-$c x y^2</math>

  <math name="ineq1" simplify="numberspreserveorder" anchor="($x2{link='false'}, $y4{link='false'})">$e^2 /3 <= $a + x</math>
  <math name="ineq2" simplify="numberspreserveorder" anchor="($x3{link='false'}, $y1{link='false'})">x > $d/y</math>
  <math name="ineq3" simplify="numberspreserveorder" anchor="($x1{link='false'}, $y2{link='false'})">-$b x - $d < $a</math>
  <math name="ineq4" simplify="numberspreserveorder" anchor="($x2{link='false'}, $y3{link='false'})">sqrt($b) < t < $b^2</math>
</setup>


