<!--*********************************************
           Problem Statement
**********************************************-->
<p>Sort each statement in the chart into its correct description, determining whether it is an <term>Inequality</term>, <term>Expression</term>, or <term>Equation</term>.</p>

<graph displayXAxis="false" displayYAxis="false" showNavigation="false">
  $eq1 $eq2 $eq3 $eq4 
  $expr1 $expr2 $expr3 $expr4
  $ineq1 $ineq2 $ineq3 $ineq4
  <rectangle fixed styleNumber="5" vertices="(-20, 6) (20, 20)"/>
  <lineSegment fixed styleNumber="5" endpoints="(-10/3, -20) (-10/3, 6)"/>
  <lineSegment fixed styleNumber="5" endpoints="(10/3, -20) (10/3, 6)"/>
  <label anchor="(-6.8, -9)" fixed><m>\large{\text{Inequalities}}</m></label>
  <label anchor="(0, -9)" fixed><m>\large{\text{Expressions}}</m></label>
  <label anchor="(6.8, -9)" fixed><m>\large{\text{Equations}}</m></label>
</graph>

  
<!--*********************************************
            Solution input
**********************************************-->
<answer name="ans1">
    <award><when>$eq1.anchor.x > 10/3 and $eq2.anchor.x > 10/3 and
    $eq3.anchor.x > 10/3 and $eq4.anchor.x > 10/3 and $ineq1.anchor.x < -10/3 and $ineq2.anchor.x < -10/3 and
    $ineq3.anchor.x < -10/3 and $ineq4.anchor.x < -10/3 and $expr1.anchor.x < 10/3 and $expr1.anchor.x > -10/3 and
    $expr2.anchor.x < 10/3 and $expr2.anchor.x > -10/3 and
    $expr3.anchor.x < 10/3 and $expr3.anchor.x > -10/3 and
    $expr4.anchor.x < 10/3 and $expr4.anchor.x > -10/3</when>
    </award>
</answer>
  
