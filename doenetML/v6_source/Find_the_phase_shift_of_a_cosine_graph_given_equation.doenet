    <option>Perfect!</option>
  </select>
</setup>
  <feedback condition="$correct or $correctAlt">$correctFeedback</feedback>


<!--*********************************************
            Solution
**********************************************-->  
<solution>
<p><m>\text{Phase shift} = $sol</m></p>
</solution>
</problem>




