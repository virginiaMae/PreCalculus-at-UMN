About the problem: Apply the commutative property of addition to generate two distinct equivalent expressions. 
*************************************************************-->

<problem>
<setup>
<select assignNames="x1 x2 x3" numToSelect="3">a b c d r s t v m n p q x y</select>
<selectFromSequence assignNames="a b c" from="2" to="10" exclude="0" numToSelect="3" withReplacement/>
<math name="sumExpr">$a $x1 + $b $x2 + $c $x3</math>
<math name="sol1">$a $x1 + $c $x3 + $b $x2</math>
<math name="sol2">$b $x2 + $a $x1 + $c $x3</math>
<math name="sol3">$b $x2 + $c $x3 + $a $x1</math>
<math name="sol4">$c $x3 + $a $x1 + $b $x2</math>
<math name="sol5">$c $x3 + $b $x2 + $a $x1</math>
<boolean name="firstCorrect" symbolicEquality>
  $user1 = $sol1 or $user1 = $sol2 or
  $user1 = $sol3 or $user1 = $sol4 or
  $user1 = $sol5
</boolean>
<boolean name="firstCorrectAndUnique">$firstCorrect and $unique</boolean>
<boolean name="secondCorrectAndUnique">$secondCorrect and $unique</boolean>
<boolean name="secondCorrect" symbolicEquality>
  $user2 = $sol1 or $user2 = $sol2 or
  $user2 = $sol3 or $user2 = $sol4 or
  $user2 = $sol5
</boolean>
<boolean name="unique" symbolicEquality>$user1 != $user2</boolean>
</setup>

