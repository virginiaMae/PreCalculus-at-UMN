<!--*********************************************
           Problem Statement
**********************************************-->
<p>Applying <em>only</em> the <term>Commutative Property of Addition</term> , write two distinct expressions that are equivalent to the expression shown below.</p>
<me>$sumExpr</me>

  
<!--*********************************************
            Solution input
**********************************************-->
<p>First expression:</p>
<p><m>$sumExpr = </m><mathInput name="user1"/></p>

<p>Second expression:</p>
<p><m>$sumExpr = </m><mathInput name="user2"/></p>

<answer name="ans1">
  <award>
    <when>$firstCorrectAndUnique and $secondCorrectAndUnique</when>
  </award>
</answer>



  
<!--*********************************************
            Feedbacks
**********************************************-->
<setup>
  <select name="correctFeedback" type="text">
    <option>Awesome!</option>
    <option>Great job!</option>
    <option>Fantastic!</option>
    <option>Nice work!</option>
    <option>Amazing!</option>
    <option>Excellent!</option>
    <option>Right on!</option>
    <option>Perfect!</option>
  </select>
</setup>
  <feedback condition="$ans1.creditAchieved = 1">$correctFeedback</feedback>
  <feedback condition="$unique = false and $ans1.justSubmitted">For credit, you must answer with two unique responses.</feedback>



<!--*********************************************
            Solution
**********************************************-->
<solution>
<p>There are a total of 5 options equivalent to the original expression:</p>
  <ul>
    <li>$sol1</li>
    <li>$sol2</li>
    <li>$sol3</li>
    <li>$sol4</li>
    <li>$sol5</li>
  </ul>
</solution>
</problem>
