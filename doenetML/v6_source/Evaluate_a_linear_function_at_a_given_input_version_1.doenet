<!--************************************************************
Author: University of Minnesota PreCalculus Dept.
Reviewed/Remixed by: Doenet team

About the problem: Evaluate a linear function at a given input. This problem has two versions.
Version 1: terms are added
Version 2: terms are subtracted

*************************************************************-->
<problem>
<setup>
  <selectFromSequence name="a" from="2" to="5"/>
  <selectFromSequence name="b" from="6" to="9"/>
  <selectFromSequence name="c" from="1" to="7"/>
  <math name="expr" simplify>f(x) = $a x + $b</math>
  <math name="sol" simplify>$a $c + $b</math>
</setup>


<!--testing-->
<!-- <p>a = $a</p>
<p>b = $b</p>
<p>c = $c</p>
<p>d = $d</p>
<p>f = $f</p>
<p>g = $g</p>
<p>sol = $sol</p> -->
<!--testing-->


<p>Evaluate $expr at <m>x = $c</m>.</p>

<p><m>f($c) = </m> 
  <answer name="ans1" symbolicEquality>
    <mathInput name="mi"/>
    <award name="allCorrect">
      <when>$mi = $sol</when>
    </award>
  </answer>
</p>





<!--*********************************************
            Feedbacks
**********************************************-->
