    <option>Nice work!</option>
    <option>Amazing!</option>
    <option>Excellent!</option>
    <option>Right on!</option>
    <option>Perfect!</option>
  </select>
</setup>
  <feedback condition="$ans1.creditAchieved = 1">$correctFeedback</feedback>
  <feedback condition="$ans1.submittedResponse = $fullExpr and $ans1.creditAchieved != 1">FOIL and simplify. Your final answer will not contain any parentheses.</feedback>

  
<solution>
<p><m>$fullExpr = $solExpr</m></p>
</solution>
</problem>
