    <feedback condition="$allCorrect">$correctFeedback</feedback>
  
   
    
  
  <!--*********************************************
              Hint
  **********************************************-->
  
  
  <!--*********************************************
              Solution
  **********************************************-->
  <solution>
  <p>$interval or $ineq</p>
  </solution>
  </problem>
  
