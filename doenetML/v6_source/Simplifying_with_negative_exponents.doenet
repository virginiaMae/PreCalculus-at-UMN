<problem>

<setup>
  <selectFromSequence assignNames="a b c d e" from="-5" to="5" numToSelect="5" withReplacement exclude="0"/>
  <selectFromSequence name="f" from="1" to="10"/>
  <math name="expr" simplify="numberspreserveorder">(x^($a) y^($b) z^($c))/(x^($a - 3) y^($b - 4) z^($c - 2)) + $f(y^($e) z^($d))/(x^(-3) y^($e - 4) z^($d - 2))</math>
  <math name="sol" simplify>(1 + $f)x^3 y^4 z^2</math>
</setup>


<!--testing-->
<!-- <p>a = $a</p>
<p>b = $b</p>
