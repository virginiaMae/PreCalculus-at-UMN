<setup>
  <selectFromSequence assignNames="a b d e" numToSelect="4" from="2" to="6"/>
  <selectFromSequence name="x" from="-5" to="5"/>
  <math name="fullExpr">$a($b x + 2) + $d x - $e</math>
  <math name="solExpr" simplify>$a($b $x + 2) + $d $x - $e</math>
</setup>


