<p>choice3 = $choice3</p>
<p>choice4 = $choice4</p>
<p>choice5 = $choice5</p>
 -->
<!--******************************************************
            End testing
*******************************************************-->
<p>Find the sum <me name="expr">1 + 3 + 5 + \dots + $b</me></p>
  
<!--*********************************************
            User solution input
**********************************************-->  
<answer name="ans1" shuffleOrder>
  <choice credit="1">$choice1</choice>
  <choice>$choice2</choice>
  <choice>$choice3</choice>
  <choice>$choice4</choice>
  <choice>$choice5</choice>
</answer>

  

