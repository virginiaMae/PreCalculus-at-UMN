<problem>

<setup>
  <selectFromSequence name="p1" from="2" to="9" />
  <selectFromSequence name="b" from="-9" to="9" exclude="0"/>
  <selectFromSequence name="a1" from="-9" to="9" exclude="$p1 0"/>
  <gcd name="gcdA1P1">$p1 <abs>$a1</abs></gcd>
  <math name="a" simplify>$a1/$gcdA1P1</math>
  <math name="p" simplify>$p1/$gcdA1P1</math>
  <math name="factor1" simplify="numberspreserveorder">($p x + $a)</math>
  <math name="factor2" simplify="numberspreserveorder">(x + $b)</math>
  <math name="factoredExpr">$factor1 $factor2</math>
  <math name="expr" expand>$factoredExpr</math>
  <!--incorrect responses for feedbacks-->
  <math name="signErrorAns1">($p x - $a)(x + $b)</math>
  <math name="signErrorAns2">($p x + $a)(x - $b)</math>
  <math name="signErrorAns3">($p x - $a)(x - $b)</math>
  <boolean name="signError">$userExpr = $signErrorAns1 or $userExpr = $signErrorAns2 or $userExpr = $signErrorAns3</boolean>
</setup>


