<p>expr = $expr</p>
<p>choice1 = $choice1</p>
<p>choice2 = $choice2</p>
<p>choice3 = $choice3</p>
<p>choice4 = $choice4</p>
<p>choice5 = $choice5</p> -->
<!--******************************************************
            End testing
*******************************************************-->

<p>Which <m>x</m> value satisfies the following inequality? </p>
  <me>$expr</me>

<!--*********************************************
            User solution input
**********************************************-->  

<tabular>
  <shuffle>
  <row copySource="ri1"/>
  <row copySource="ri2"/>
  <row copySource="ri3"/>
  <row copySource="ri4"/>
  <row copySource="ri5"/>
  </shuffle>
</tabular>

<answer name="ans1">
  <award><when>$bi1 = true and $bi2 = false and $bi3 = false and $bi4 = false and $bi5 = false</when></award>
</answer>

