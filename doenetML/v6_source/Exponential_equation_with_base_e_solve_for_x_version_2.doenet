<problem>
<setup>
  <selectFromSequence name="a" from="1" to="7"/>
  <selectFromSequence name="b" from="1" to="9"/>
  <math name="expr">e^(x + $a) = e^x + $b</math>
  <math name="sol">ln($b/(e^($a) - 1))</math>
</setup>


<!--testing-->
<!-- <p>a = $a</p>
<p>b = $b</p>
