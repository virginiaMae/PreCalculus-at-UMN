<!--testing-->

<p>Find the points of intersection of the parabola <m>y = x^2</m> with the line <m>y = $linear</m>.</p>



<!--*********************************************
            Graphing Tool
**********************************************-->
<aside><title>Graphing tool</title>
  
<sideBySide margins="5%" widths="30% 70%">
<div><p>Graph parabola with given equation:</p> 
  <p><m>y = </m> <mathInput name="eq1"/></p>

  <p>Graph line:</p> 
  <p><m>y = </m> <mathInput name="eq2"/></p>

  <p>Check points of intersection:</p>
  <p><m>P_1 = </m><mathInput name="graphP1" bindValueTo="$user_P1"/></p>
  <p><m>P_2 = </m><mathInput name="graphP2" bindValueTo="$user_P2"/></p>
</div>
 
<graph name="g1" ymin="$ymin{link='false'}" ymax="$ymax{link='false'}">
  <function name="givenParabola" styleNumber="5">$eq1</function>
  <function name="givenLine">$eq2</function>
  <point coords="$graphP1" styleNumber="2"/>
  <point coords="$graphP2" styleNumber="2"/>
</graph>
  
</sideBySide>

</aside>  

<!--*********************************************
            User solution input
**********************************************-->


<p><m>P_1 = </m> <mathInput name="user_P1" prefill="(x,y)"/></p>
<p><m>P_2 = </m> <mathInput name="user_P2" prefill="(x,y)"/></p>

  <answer name="ans1">
    <award name="correct">
      <when>$userSols = $solList</when>
    </award>        
  </answer>


<!--*********************************************
            Feedbacks
**********************************************-->
<setup>
  <select name="correctFeedback" type="text">
    <option>Awesome!</option>
    <option>Great job!</option>
    <option>Fantastic!</option>
    <option>Nice work!</option>
    <option>Amazing!</option>
    <option>Excellent!</option>
    <option>Right on!</option>
    <option>Perfect!</option>
  </select>
</setup>
  <feedback condition="$ans1.creditAchieved = 1">$correctFeedback</feedback>
  <feedback condition="$P1incorrect and $ans1.justSubmitted">There is an error in intersection point <m>P_1</m>.</feedback>
  <feedback condition="$P2incorrect and $ans1.justSubmitted">There is an error in intersection point <m>P_2</m>.</feedback>



<!--*********************************************
            Hint
**********************************************-->

<!--*********************************************
            Solution
**********************************************-->
<solution>
<p><m>P_1 = $sol1</m>, <m>P_2 = $sol2</m>. Note that points can be entered in either order.</p>
 
<graph name="gsol" ymin="$ymin" ymax="$ymax">
  $f $g
  <point coords="$sol1" styleNumber="2">
    <label><m>P_1</m></label>
  </point>
  <point coords="$sol2" styleNumber="2">
    <label><m>P_2</m></label>
  </point>
</graph>
</solution>
</problem>


