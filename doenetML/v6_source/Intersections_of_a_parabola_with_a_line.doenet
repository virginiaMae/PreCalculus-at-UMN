<problem><title/>
<setup>
  <selectFromSequence name="a" from="-5" to="5" exclude="0"/>
  <selectFromSequence name="b" from="-5" to="5" exclude="0 -$a"/>
  <function name="f" styleNumber="5">x^2</function>
  <math name="linear" simplify>($b - $a)x + $a $b</math>
  <function name="g">$linear</function>
  <math name="sol1" simplify>(-$a, $$f(-$a))</math>
  <math name="sol2" simplify>($b, $$f($b))</math>
  <mathlist name="solList" unordered>$sol1 $sol2</mathlist>
  <mathlist name="userSols" unordered>$user_P1 $user_P2</mathlist>
  <math name="ymin" simplify>min(-3, $$f(-$a)-3, $$f($b)-3)</math>
  <math name="ymax" simplify>max(3, $$f(-$a)+3, $$f($b)+3)</math>
  <boolean name="P1incorrect">$user_P1 != $sol1 and $user_P1 != $sol2</boolean>
  <boolean name="P2incorrect">$user_P2 != $sol1 and $user_P2 != $sol2</boolean>
</setup>


