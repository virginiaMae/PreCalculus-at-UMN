<problem>
<setup>
<group name="demoPoints">
  <point name="p1" styleNumber="5" fixLocation>(-8,5)
    <label><m>a</m></label>
  </point>
  <point name="p2" styleNumber="5" fixLocation>(-6,2)
    <label><m>b</m></label>
  </point>
  <point name="p3" styleNumber="5" fixLocation>(-3,3)
    <label><m>c</m></label>
  </point>
  <point name="p4" styleNumber="5" fixLocation>(0,0)
    <label><m>d</m></label>
  </point>
  <point name="p5" styleNumber="5" fixLocation>(3,-3)
    <label><m>e</m></label>
  </point>
  <point name="p6" styleNumber="5" fixLocation>(6,-2)
    <label><m>f</m></label>
  </point>
  <point name="p7" styleNumber="5" fixLocation>(8,-5)
    <label><m>g</m></label>
  </point>
</group>
<derivative name="dfdx">$f</derivative>
<function name="demoFunction" through="$p1 $p2 $p3 $p4 $p5 $p6 $p7"/>
<boolean name="zeroCorrect">$dp4 = (0,0)</boolean>
<boolean name="isStraight" allowedErrorInNumbers="0.001">$$dfdx($dp1.x) = $$dfdx($dp2.x) and $$dfdx($dp2.x) = $$dfdx($dp3.x) and $$dfdx($dp3.x) = $$dfdx($dp4.x) and $$dfdx($dp4.x) = $$dfdx($dp5.x) and $$dfdx($dp5.x) = $$dfdx($dp6.x) and $$dfdx($dp6.x) = $$dfdx($dp7.x)</boolean>
<boolean name="notAllIncreasingL">$dp1.y > $dp2.y or $dp2.y > $dp3.y</boolean>
<boolean name="negativeYQ4">$dp5.y < 0 and $dp6.y < 0 and $dp7.y < 0</boolean>
<boolean name="isOdd">$$f($dp1.x) = -$$f($dp7.x) and $$f($dp2.x) = -$$f($dp6.x)
  and $$f($dp3.x) = -$$f($dp5.x)</boolean>
</setup>


