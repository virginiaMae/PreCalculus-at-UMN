<!--******************************************************
            Current randomized problem
*******************************************************-->
<!-- 
QUESTION: The graph of (y - 2)^2 = 3(x - 10) is a:

A) left or right opening parabola
B) up or down opening parabola
C) ellipse
D) circle ;; 

VARIABLES: {$$a$$[{1,3}, Integer], $$b$$[{-1,1}, Real]} ;;

ComputedVariables: {$$c1$$ -> Cos[$$a$$]};;

answerLabel = {"Answer Label"};;

answer = {"a","b","c","d"}
(*Enter correct answer in first position (answer a). *);;
SOLUTION = {1};;
tolerance = 0

-->


<div newNamespace>
<problem>
<setup>
  <selectFromSequence name="a" from="-4" to="4" exclude="0"/>
  <selectFromSequence name="b" from="2" to="5"/>
  <selectFromSequence name="c" from="-4" to="4" exclude="0"/>
  <selectFromSequence name="d" from="-4" to="4" exclude="0"/>
  <select name="select" assignNames="(expr solSimple index)">
    <option>
      <math simplify="numberspreserveorder">(y + $a)^2 = $b(x + $c)</math>
      <math expand simplify="numberspreserveorder">
    x = 1/$b y^2 + 2 $a y / $b + $a^2/$b - $c</math>
      <number>1</number>
    </option>
    <option>
      <math simplify="numberspreserveorder">-(x + $a)^2 + $b(y + $c) = 0</math>
      <math expand simplify="numberspreserveorder">
    y = 1/$b x^2 + 2 $a x / $b + $a^2/$b - $c</math>
      <number>2</number>
    </option>
    <option>
      <math expand simplify="numberspreserveorder">$a^2 + x^2 - 2 $c y = -y^2 + 2 x $a - $c^2 + $b^2</math>
      <math simplify="numberspreserveorder">(x - $a)^2 + (y - $c)^2 = $b^2</math>
      <number>3</number>
    </option>
    <option>
      <math expand simplify="numberspreserveorder">$b^2 ($c^2 - 2 x $c + x^2) - $a^2 $b^2 = -$a^2(y^2 - 2 $d y + $d^2)</math>
      <math simplify="numberspreserveorder">(x - $c)^2 / $a^2 + (y - $d)^2 / $b^2 = 1</math>
      <number>4</number>
    </option>
  </select>
  <boolean name="check">$solSimple = $expr</boolean>
</setup>


