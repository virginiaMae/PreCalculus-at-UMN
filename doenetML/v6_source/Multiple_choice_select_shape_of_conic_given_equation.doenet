<answer name="ans1" shuffleOrder maxNumAttempts="1">
  <choice name="c1" credit="$index = 1">a left or right opening parabola</choice> 
  <choice name="c2" credit="$index = 2">an up or down opening parabola</choice>
  <choice name="c3" credit="$index = 3">a circle</choice>
  <choice name="c4" credit="$index = 4">an ellipse</choice>
</answer>
 
