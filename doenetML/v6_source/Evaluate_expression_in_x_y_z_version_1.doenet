<setup>
  <selectFromSequence assignNames="a b c d e" numToSelect="5" from="-4" to="9" exclude="0 -1"/>
  <selectFromSequence assignNames="x y z" numToSelect="3" from="-3" to="6"/>
  <math name="expr1" simplify="numberspreserveorder">$a x + $b y - z</math>
  <math name="sol1" simplify>$a $x + $b $y - $z</math>
  <math name="expr2" simplify="numberspreserveorder">$c z + $d x^2 </math>
  <math name="sol2" simplify>$c $z + $d $x^2 </math>
  <math name="expr3" simplify="numberspreserveorder">$e x z + $d($b $e - $a y) </math>
  <math name="sol3" simplify>$e $x $z + $d($b $e - $a $y)</math>
  <math name="expr4" simplify="numberspreserveorder">$e $a x (y + 1) + $d z^2 </math>
  <math name="sol4" simplify>$e $a $x ($y + 1) +  $d $z^2</math>  
</setup>


