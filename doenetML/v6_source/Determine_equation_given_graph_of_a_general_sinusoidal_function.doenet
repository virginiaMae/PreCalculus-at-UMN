About the problem: Given the graph of a general sinusoidal function, determine the corresponding equation (may be answered with either sine or cosine). Parameters are randomized. 

(TR-Graphs #19 TR1201)
*************************************************************-->

<problem>
<setup>
  <selectFromSequence name="a" from="2" to="4"/>
  <selectFromSequence name="d" from="-4" to="4" exclude="0"/>
  <select name="b">1/3 1/2 2/3 3/2 2 3 4 4/3 1/4</select>
  <select name="c">-2 -3 -4 -8 -9 -10 -14 -15 -16 -20 -21 -22 2 3 4 8 9 10 14 15 16 20 21 22</select> 
  <function name="f1">$a sin($b x + $c pi/24) + $d</function> 
  <function name="f1AnsCheck" domain="[-4pi, 4pi]">$a sin($b x + $c pi/24) + $d</function> 
  <math name="c2" simplify="numberspreserveorder">$c/24 - 1/2</math>
  <function name="f2">$a cos($b x + $c2 pi) + $d</function>

  <function name="g" styleNumber="4">$userEq</function>
  <function name="gAnsCheck" domain="[-4pi, 4pi]">$userEq</function>
  <number name="ymin">min($a - 4, $d + $a - 4, $d - $a - 4)</number>
  <number name="ymax">max($a + 4, $d + $a + 4, $d - $a + 4)</number>
  <number name="xmin">-4pi/$b - 0.5</number>
  <number name="xmax">4pi/$b + 0.5</number>
  <number name="zeroFixed" fixed>0</number> 
  <math name="s" simplify>$c/(24 $b)</math>

  <map name="posLabels">
    <template><math simplify>($i/(2$b) - $s)pi</math></template>
    <sources alias="i">
      <sequence from="1" to="10" step="2"/>
    </sources>
  </map>
  <map name="negLabels">
    <template><math simplify>($i/(2$b) - $s)pi</math></template>
    <sources alias="i">
      <sequence from="-1" to="-10" step="-2"/>
    </sources>
  </map>
</setup>

