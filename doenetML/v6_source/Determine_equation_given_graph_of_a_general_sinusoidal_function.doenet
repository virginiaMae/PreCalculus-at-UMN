  <feedback condition="$correct">$correctFeedback</feedback>


<!--*********************************************
            Solution
**********************************************-->  
<solution>
<p><m>y = $f1.formula </m> or <m>y = $f2.formula </m> </p>
<p>Other answers that are mathematically equivalent are also valid.</p>
</solution>
</problem>




