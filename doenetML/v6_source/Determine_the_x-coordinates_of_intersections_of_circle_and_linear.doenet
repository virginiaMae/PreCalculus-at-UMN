<problem><title/>
<setup>
  <selectFromSequence name="a" from="1" to="4"/>
  <selectFromSequence name="d" from="1" to="6"/>
  <selectFromSequence name="b" from="-1" to="1" exclude="0"/>
  <math name="c" simplify>$a $b</math>
  <math name="rSq" simplify>2 $c^2 + 2 $d^2</math>
  <math name="r">sqrt($rSq)</math>
  <math name="circle">x^2 + y^2 = $rSq</math>
  <math name="linear" simplify>x + 2 $c</math>
  <function name="g">$linear</function>
  <math name="sol1" simplify>-$c - $d</math>
  <math name="sol2" simplify>-$c + $d</math>
  <mathlist name="solList" unordered>$sol1 $sol2</mathlist>
  <mathlist name="userSols" unordered>$user_x1 $user_x2</mathlist>
  <point name="P1" styleNumber="2" fixLocation>($sol1, $$g($sol1))</point>
  <point name="P2" styleNumber="2" fixLocation>($sol2, $$g($sol2))</point>
  <math name="ymin" simplify>min(-$r - 3, $$g($sol1)-3, $$g($sol2)-3)</math>
  <math name="ymax" simplify>max($r + 3, $$g($sol1)+3, $$g($sol2)+3)</math>
  <boolean name="x1incorrect">$user_x1 != $sol1 and $user_x1 != $sol2</boolean>
  <boolean name="x2incorrect">$user_x2 != $sol1 and $user_x2 != $sol2</boolean>
</setup>


