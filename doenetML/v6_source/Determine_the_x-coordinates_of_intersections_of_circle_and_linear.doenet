<!--testing-->

<p>Find the <m>x</m>-coordinate of the points of intersection of the circle <m>$circle</m> and the line <m>y = $linear</m>.</p>



<!--*********************************************
            Graphing Tool
**********************************************-->
<aside><title>Graphing tool</title>
  
<sideBySide margins="5%" widths="30% 70%">
<div><p>Graph circle with given equation:</p> 
  <p><m>x^2 + y^2 = </m><mathInput name="userRSq"/></p>

  <p>Graph line:</p> 
  <p><m>y = </m> <mathInput name="eq2"/></p>

  <p>Check <m>x</m>-coordinates of intersections:</p>
  <p><m>x_1 = </m><mathInput name="graphL1" bindValueTo="$user_x1"/></p>
  <p><m>x_2 = </m><mathInput name="graphL2" bindValueTo="$user_x2"/></p>
</div>
 
<graph name="g1" ymin="$ymin{link='false'}" ymax="$ymax{link='false'}" identicalAxisScales>
  <circle center="(0,0)" radius="sqrt($userRSq)" fixLocation/>
  <function name="givenLine">$eq2</function>
  <line equation="x = $graphL1" styleNumber="2"/>
  <line equation="x = $graphL2" styleNumber="2"/>
</graph>
  
</sideBySide>

</aside>  

<!--*********************************************
            User solution input
**********************************************-->


<p><m>x_1 = </m> <mathInput name="user_x1"/></p>
<p><m>x_2 = </m> <mathInput name="user_x2"/></p>

  <answer name="ans1">
    <award name="correct">
      <when>$userSols = $solList</when>
    </award>        
  </answer>


<!--*********************************************
            Feedbacks
**********************************************-->
<setup>
  <select name="correctFeedback" type="text">
    <option>Awesome!</option>
    <option>Great job!</option>
    <option>Fantastic!</option>
    <option>Nice work!</option>
    <option>Amazing!</option>
    <option>Excellent!</option>
    <option>Right on!</option>
    <option>Perfect!</option>
  </select>
</setup>
  <feedback condition="$ans1.creditAchieved = 1">$correctFeedback</feedback>
  <feedback condition="$x1incorrect and $ans1.creditAchieved != 1 and $ans1.responseHasBeenSubmitted">There is an error in your first entered <m>x</m>-coordinate.</feedback>
  <feedback condition="$x2incorrect and $ans1.creditAchieved != 1 and $ans1.responseHasBeenSubmitted">There is an error in your second entered <m>x</m>-coordinate.</feedback>



<!--*********************************************
            Hint
**********************************************-->

<!--*********************************************
            Solution
**********************************************-->
<solution>
<p><m>x_1 = $sol1</m>, <m>x_2 = $sol2</m>. Note that <m>x</m>-coordinates can be entered in either order.</p>
 
<graph name="gsol" ymin="$ymin" ymax="$ymax" identicalAxisScales>
  $g
  <circle center="(0,0)" radius="sqrt($rSq)" fixLocation/>
  <point copySource="P1">
    <label><m>$P1.coords</m></label>
  </point>
  <point copySource="P2">
    <label><m>$P2.coords</m></label>
  </point>
  <line equation="x = $sol1" styleNumber="2"/>
  <line equation="x = $sol2" styleNumber="2"/>
</graph>
</solution>
</problem>


