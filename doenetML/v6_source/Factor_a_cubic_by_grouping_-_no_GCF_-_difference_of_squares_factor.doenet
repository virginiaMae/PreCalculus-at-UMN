<!--*********************************************
            Solution
**********************************************-->
  
<solution>  
<p><md>
  <mrow>$expr &= $factoredExpr1 \;\text{or}</mrow>
  <mrow>&= $factoredExpr2</mrow>
</md>
</p>
</solution>
</problem>
