<problem>
<setup>
  <selectFromSequence name="a" from="5" to="9"/>
  <selectFromSequence name="b" from="2" to="4"/>
  <math name="c" simplify>$a - $b</math>
  <math name="d" simplify>$a $b</math>
  <math name="factor1">(x + $a)</math>
  <math name="factor2">(x - $b)</math>
 
  <math name="factoredExpr">$factor1 $factor2</math>

  <!--expressions for feedbacks-->
  <math name="signErrorAns">(x - $a)(x + $b)</math>
</setup>


<!--testing-->
